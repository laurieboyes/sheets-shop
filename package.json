{
  "name": "sheets-shop",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "start": "serverless offline start",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.2",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "serverless": "^1.30.1",
    "serverless-offline": "^3.25.5",
    "serverless-plugin-typescript": "^1.1.5",
    "ts-jest": "^23.0.0"
  },
  "dependencies": {
    "node-fetch": "^2.1.2"
  }
}
